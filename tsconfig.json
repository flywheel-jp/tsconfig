{
    "compilerOptions": {
        // Target: Node.js v12
        "target": "es2019",
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "lib": ["es2019"],
        "skipLibCheck": true,
        "useDefineForClassFields": true,
        // Code format
        "sourceMap": true,
        "declaration": true,
        "pretty": true,
        "newLine": "lf",
        "stripInternal": true,
        // Strict Type-Checking options
        "strict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "noEmitOnError": true,
        // React
        "jsx": "react"
    }
}
